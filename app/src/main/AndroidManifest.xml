<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.timapps.drawing"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DayOrNight"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MainScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name=".ScoresAndStats"
            android:label="@string/title_activity_scores_and_stats"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".GameMode"
            android:label="@string/title_activity_game_mode"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".GeneralMode"
            android:label="@string/title_activity_general_mode"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ExpandedMainActivity"
            android:label="@string/title_activity_expanded_main"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".SandwichMainActivity"
            android:label="@string/title_activity_sandwich_main"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ExpandedScreen"
            android:label="@string/title_activity_expanded_screen"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".SandcwichScreen"
            android:label="@string/title_activity_sandcwich_screen"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".generalModeDescription"
            android:label="@string/title_activity_general_mode_description"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
